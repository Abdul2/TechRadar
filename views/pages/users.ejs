    <meta name="description" content="">
    <meta name="author" content="">

    <% include ../partials/head.ejs %>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.10.1/bootstrap-table.min.css">

</head>

<body>

<% include ../partials/menu.ejs %>

<div tabindex="-1" id="content" class="site-header" style="margin-bottom: 10px">
    <div class="container">
        <row>
            <div class="col-md-12">
                <h1>Users</h1>
                <p>Manage system users</p>
            </div>
        </row>

    </div>
</div>

<div class="container bs-docs-container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <table id="results"></table>
        </div>
    </div>

</div>

<% include ../partials/footer.ejs %>


<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.10.1/bootstrap-table.min.js"></script>
<script>

    $('#results').bootstrapTable( {
        method: 'get',
        url: '/users/list',
        cache: false,
        striped: true,
        escape: true,
        idField: 'id',
        search: true,
        showColumns: true,
        showRefresh: true,
        columns: [{
            field: 'id',
            title: 'ID',
            visible: false
        }, {
            field: 'username',
            title: 'Username',
            sortable: true,
        }, {
            field: 'displayname',
            title: 'Full Name',
            align: 'center',
            sortable: true
        }, {
            field: 'rolename',
            title: 'Role',
            align: 'center',
            sortable: true
        }, {
            field: 'isadmin',
            title: 'Admin',
            align: 'center',
            sortable: true
        }]
    })


    window.operateEvents = {
        'click .like': function (e, value, row, index) {
            alert('You click like action, row: ' + JSON.stringify(row));
        },
        'click .remove': function (e, value, row, index) {
            $table.bootstrapTable('remove', {
                field: 'id',
                values: [row.id]
            });
        }
    };

    function operateFormatter(value, row, index) {
        return [
            '<a href="/technology/view/' + row['id'] + '" target="_blank">' + value + '</a>'
        ].join('');
    }

    $('#search-field').keypress(function(event){
        if(event.keyCode == 13){
            $('#search-btn').click();
        }
    });

    var clickBtn = function () {
        var parameters = { search: $('#search-field').val() };
        $.get( '/technology/dosearch',parameters, function(data) {
            $('#results').bootstrapTable( 'load' , data );

        });
    };

    $('#search-btn').click( clickBtn );

</script>

</body>
</html>
