    <meta name="description" content="">
    <meta name="author" content="">

    <% include ../../partials/head.ejs %>


    <link rel="stylesheet" href="/lib/bootstrap-table/bootstrap-table.min.css">

</head>

<body>

<% include ../../partials/menu.ejs %>

<div tabindex="-1" id="content" class="site-header" style="margin-bottom: 10px">
    <div class="container">
        <row>
            <div class="col-md-12">
                <h1>Users</h1>
                <p>Manage system users</p>
            </div>
        </row>

    </div>
</div>

<div class="container bs-docs-container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div id="custom-toolbar">
                <div class="form-inline" role="form">
                    <a href="/user/add"  class="btn btn-default">Add</a>
                    <a href="/error"  class="btn btn-default">Delete</a>
                </div>
            </div>
            <table id="results"></table>
        </div>
    </div>

</div>

<% include ../../partials/footer.ejs %>

<script src="/lib/bootstrap-table/bootstrap-table.min.js"></script>
<script>

    $('#results').bootstrapTable( {
        method: 'get',
        url: '/api/users',
        cache: false,
        striped: true,
        escape: true,
        idField: 'id',
        search: true,
        showColumns: true,
        showRefresh: true,
        showPaginationSwitch: true,
        pagination: true,
        columns: [{
            field:'state',
            checkbox:'true'
        },   {
            field: 'id',
            title: 'ID',
            visible: false
        }, {
            field: 'username',
            title: 'Username',
            sortable: true,
        }, {
            field: 'displayname',
            title: 'Full Name',
            align: 'center',
            sortable: true
        }, {
            field: 'rolename',
            title: 'Role',
            align: 'center',
            sortable: true
        }, {
            field: 'isadmin',
            title: 'Admin',
            align: 'center',
            sortable: true,
            formatter: adminFormatter
        }]
    })


    function adminFormatter(value, row, index) {

        var column = [];
        if( row['isadmin']) {
            column = [ "<span class='glyphicon glyphicon-ok' aria-hidden='true'/>"]
        } else {
            column = [ "<span class='glyphicon glyphicon-remove' aria-hidden='true'/>"]
        }
        return column;
    }


    function operateFormatter(value, row, index) {
        return [
            '<a href="/technology/view/' + row['id'] + '" target="_blank">' + value + '</a>'
        ].join('');
    }



</script>

</body>
</html>
