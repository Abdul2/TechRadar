<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <% include ../partials/head.ejs %>

    <link rel="stylesheet" href="/lib/bootstrap-table/bootstrap-table.min.css">

</head>

<body>

<% include ../partials/menu.ejs %>

<div tabindex="-1" id="content" class="site-header">
    <div class="container">
        <row>
            <div class="col-md-8">
                <h1>Technology Search</h1>
            </div>
        </row>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="input-group">
                    <input type="text" class="form-control" id="search-field" name="search-field"
                           placeholder="Search term...">
                <span class="input-group-btn">
                    <button class="btn btn-default" id="search-btn" type="button">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="container bs-docs-container">

    <div class="col-md-10 col-md-offset-1">
        <ol class="breadcrumb" style="margin-top: 10px;">
            <li><a href="/">Home</a></li>
            <li class="active">Search</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <table id="results"></table>
        </div>
    </div>

</div>

<% include ../partials/footer.ejs %>

<script src="/lib/bootstrap-table/bootstrap-table.min.js"></script>
<script>

    $('#results').bootstrapTable({
        data: [],
        cache: false,
        striped: true,
        escape: true,
        idField: 'id',
        showColumns: true,
        showRefresh: true,
        showPaginationSwitch: true,
        pagination: true,
        columns: [{
            field: 'id',
            title: 'Item ID',
            visible: false
        }, {
            field: 'name',
            title: 'Technology',
            sortable: true,
            formatter: operateFormatter
        }, {
            field: 'status',
            title: 'Status',
            align: 'center',
            sortable: true
        }, {
            field: 'category',
            title: 'Category',
            align: 'center',
            sortable: true
        }]
    })


    window.operateEvents = {
        'click .like': function (e, value, row, index) {
            alert('You click like action, row: ' + JSON.stringify(row));
        },
        'click .remove': function (e, value, row, index) {
            $table.bootstrapTable('remove', {
                field: 'id',
                values: [row.id]
            });
        }
    };

    function operateFormatter(value, row, index) {
        return [
            '<a href="/technology/' + row['id'] + '">' + value + '</a>'
        ].join('');
    }

    $('#search-field').keypress(function (event) {
        if (event.keyCode == 13) {
            $('#search-btn').click();
        }
    });

    var clickBtn = function () {
        var parameters = {search: $('#search-field').val()};
        $.get('/api/technology', parameters, function (data) {
            $('#results').bootstrapTable('load', data);

        });
    };

    $('#search-btn').click(clickBtn);

</script>

</body>
</html>
